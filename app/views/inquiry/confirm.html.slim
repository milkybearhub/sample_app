- provide(:title, '確認')
= form_for @inquiry, url: inquiry_thanks_path do |f|
  = f.hidden_field :name
  = f.hidden_field :email
  = f.hidden_field :message
  h1
    | 確認画面
  .row
    .col-md-6.col-md-offset-3
      div
        label
          | お名前
        p
          = @inquiry.name
      div
        label
          | メールアドレス
        p
          = @inquiry.email
      div
        label
          | お問い合わせ内容
        p
          = @inquiry.message
      = f.submit '修正', name: 'back', class: 'btn btn-default'
      = f.submit '送信', class: 'btn btn-primary'
